{
  "version": 2,
  "builds": [
    {
      "src": "newsapi-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "newsapi-backend/api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "newsapi-frontend/dist/index.html" },
    { "src": "/(.*)", "dest": "newsapi-frontend/dist/$1" }
  ]
}
